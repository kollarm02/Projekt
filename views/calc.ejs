<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kalória Számológép</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      text-align: center;
      background-image: url("https://www.visitmorocco.com/sites/default/files/thumbnails/image/maigrir-vite-sans-r%C3%A9gime-sans-sport-niaque-gain-vitesse-reussir-success.jpg");
      color: #495057;
      margin: 0;
      padding: 0;
    }

    #calculator {
      max-width: 400px;
      margin: 50px auto;
      padding: 20px;
      border-radius: 10px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      color: #007bff;
    }

    label {
      display: block;
      margin-bottom: 5px;
      color: #495057;
    }

    input, select, button {
      width: 100%;
      padding: 8px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }

    button {
      background-color: #007bff;
      color: #fff;
      font-size: 16px;
      font-weight: bold;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #0056b3;
    }

    h3 {
      color: #007bff;
      margin-top: 20px;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    p {
      margin: 5px 0;
    }

    a {
      display: block;
      margin-top: 20px;
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
      transition: color 0.3s;
    }

    a:hover {
      color: #0056b3;
    }
  </style>
</head>
<body>
  <div id="calculator">
    <h2>Kalória Számológép</h2>
    <% if (typeof error !== 'undefined') { %>
      <p style="color: red;"><%= error %></p>
    <% } %>
    <form action="/calculate" method="post">
      <label for="weight">Testsúly (kg):</label>
      <input type="number" id="weight" name="weight" placeholder="Adja meg a testsúlyt" required>

      <label for="height">Magasság (cm):</label>
      <input type="number" id="height" name="height" placeholder="Adja meg a magasságot" required>

      <label for="age">Kor:</label>
      <input type="number" id="age" name="age" placeholder="Adja meg az életkorát" required>

      <label for="gender">Nem:</label>
      <select id="gender" name="gender" required>
        <option value="male">Férfi</option>
        <option value="female">Nő</option>
      </select>

      <label for="activityLevel">Aktivitási szint:</label>
      <select id="activityLevel" name="activityLevel" required>
        <option value="1.2">Inaktív (ülő életmód)</option>
        <option value="1.375">Kevésbé aktív (könnyű testmozgás)</option>
        <option value="1.55">Közepesen aktív (naponta közepes testmozgás)</option>
        <option value="1.725">Nagyon aktív (naponta nehéz testmozgás)</option>
        <option value="1.9">Extrém aktív (naponta extrém testmozgás)</option>
      </select>

      <button type="submit">Számol</button>
    </form>

    <h3>Eredmény:</h3>
    <% if (results.length > 0) { %>
      <ul>
        <% results.forEach(result => { %>
          <p><%= result.totalCalories %> kcal</p>
        <% }); %>
      </ul>
    <% } else { %>
      <p>Nincsenek eredmények.</p>
    <% } %>
  </div>
  <a href="http://localhost:3500">Főoldal</a>
</body>
</html>

